{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Europe/Gibraltar",
  "extends": [
    "config:base",
    "schedule:weekly"
  ],
  "assignees": [
    "@biomejs/maintainers",
    "@biomejs/core-contributors"
  ],
  "packageRules": [
    {
      "groupName": "github-actions",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "Rust crates",
      "matchManagers": [
        "cargo"
      ],
      "matchFileNames": [
        "crates/**",
        "xtask/**"
      ],
      "ignoreDeps": [
        "syn",
        "quote"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "Website",
      "matchFileNames": [
        "website/package.json"
      ],
      "matchManagers": [
        "npm"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "@biomejs packages",
      "matchFileNames": [
        "packages/**"
      ],
      "matchManagers": [
        "npm"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
